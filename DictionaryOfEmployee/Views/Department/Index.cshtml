@model List<Department>

<h2>Подразделение</h2>
<div><a asp-action="add"><input type="submit" value="Добавить" /></a></div>
<table class="table">
	<tr><th>Название</th><th>Организация к ней</th><th></th><th></th></tr>

	@foreach (var element in Model)
	{ 
		<tr>
			<td>@element.Organization.Name</td>
			<td>@element.Name</td>
			<td>
				<a asp-action="Edit" asp-controller="Department" asp-route-id="@element.Id">
					<input type="submit" value="Редактировать" />
				</a>
			</td>

			<td>
				<form asp-controller="Department" asp-action="Remove" method="post" asp-route-id="@element.Id">
					<input type="submit" value="Удалить" />
				</form>
			</td>
		</tr>
	}
</table>