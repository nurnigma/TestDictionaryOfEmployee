@model User

<h2>Редактирование пользователей</h2>
<form asp-action="Edit" asp-controller="user" asp-route-id="@Model.Id">
    <div>
            <label asp-for="LastName">Фамилия</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
    </div>    
    <div>
            <label asp-for="FirstName">Имя</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
    </div>    
    <div>
            <label asp-for="Patronymic">Отчество (если имеется)</label><br />
            <input type="text" asp-for="Patronymic" />
            <span asp-validation-for="Patronymic" />
    </div>
        <br />
	<div>
		<input type="submit" value="Сохранить изменения" />
	</div>
</form>